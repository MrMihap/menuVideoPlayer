<Window x:Class="menuVideoPlayer.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="MainWindow"  WindowStartupLocation="CenterScreen" Loaded="Player_Loaded">
    <Window.CommandBindings>
        <CommandBinding Command="MediaCommands.Play" CanExecute="Play_CanExecute" Executed="Play_Executed" />
    </Window.CommandBindings>
    <MediaElement Name="mePlayer" SourceUpdated="mePlayer_SourceUpdated" Grid.Row="1" LoadedBehavior="Play"  Stretch="UniformToFill"  MediaEnded="MediaElement_MediaEnded" />

</Window>
