<Window x:Class="menuVideoPlayer.controls.AboutItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AboutItem" WindowStartupLocation="Manual" Height="600" Width="800" WindowStyle="None" Loaded="Info_Loaded" ResizeMode="NoResize" >
    <Window.Background>
        <ImageBrush ImageSource="img/background.png" />
    </Window.Background>
    <Grid>
        <Button Name="Close" Content="ЗАКРЫТЬ" Margin="360,0,376,10" FontSize="24" FontFamily="Calibri" Click="Close_Click" Height="66" VerticalAlignment="Bottom">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Offset="1"/>
                    <GradientStop Color="#FFDADADA"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>
        <TextBox Name="About" VerticalScrollBarVisibility="Visible" IsReadOnly="True" 
                 TextWrapping="Wrap" Text="TextBox" Margin="37,115,37,102" FontSize="40"  BorderBrush="{x:Null}" Background="#FFFDFDFD" Foreground="Black" FontFamily="Segoe UI Symbol"/>
        <Label Name="Header" Content="Label" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Height="100" Width="800" FontSize="40" BorderBrush="{x:Null}" Background="Transparent" Foreground="#FFE0E0E0" FontFamily="Segoe UI Symbol"/>

    </Grid>
</Window>
