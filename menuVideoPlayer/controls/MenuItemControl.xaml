<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="menuVideoPlayer.controls.MenuItemControl" 
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="1080" VerticalAlignment="Top">
    <Grid>
        <Button x:Name="playButton" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="99" Height="55" Click="playButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="controls\img\play.png" />
            </Button.Background>
        </Button>
        <Button x:Name="infoButton" Content="Info" HorizontalAlignment="Left" Margin="983,9,0,0" VerticalAlignment="Top" Width="97" Height="58" Click="infoButton_Click"/>
        <TextBox x:Name="headerTextBox" HorizontalAlignment="Left" Height="23" Margin="146,29,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="803"/>

    </Grid>
</UserControl>
