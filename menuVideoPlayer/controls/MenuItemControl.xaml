<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="menuVideoPlayer.controls.MenuItemControl" 
             mc:Ignorable="d" 
             d:DesignHeight="106" d:DesignWidth="1080" VerticalAlignment="Top">
    <Grid>
        <Button x:Name="playButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105" Height="105" Click="playButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="img\play.png" />
            </Button.Background>
        </Button>
        <Button x:Name="infoButton" HorizontalAlignment="Right" VerticalAlignment="Top" Width="105" Height="105" Click="infoButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="img\info.png" />
            </Button.Background>
        </Button>

        <TextBox x:Name="headerTextBox" HorizontalAlignment="Left" Height="23" Margin="146,29,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="803"/>

    </Grid>
</UserControl>
